motor_der.run_time(250,1500)

#Giro3
motor_izq.run_angle(300,300)

#Avance4
motor_izq.run_time(250,1000,wait=False)
motor_der.run_time(250,1000)

#Giro4
motor_der.run_angle(300,300)

#Avance5
motor_izq.run_time(250,1000,wait=False)
motor_der.run_time(250,1000)

#Giro5
motor_der.run_angle(300,300)

#Avance6
motor_izq.run_time(250,1250,wait=False)
motor_der.run_time(250,1250)

#Giro6
motor_izq.run_angle(300,300)

#Avance7
motor_izq.run_time(250,3000,wait=False)
motor_der.run_time(250,3000)

